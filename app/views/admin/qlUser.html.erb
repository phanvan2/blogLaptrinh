
<h3 style="margin-top: 50px;margin-bottom:40px;text-align: center;">
    <span class="title_main">
        QUẢN LÝ NGƯỜI DÙNG
    </span>
</h3>
<div class="table-wrapper" >
    <table class="fl-table">
        <thead>
        <tr>
            <th>STT</th>
            <th>Tên người dùng</th>
            <th>Email</th>
			<th>Số bài đăng</th>
			<th>Vai trò </th>
            <th></th>
			<th></th>
			
        </tr>
        </thead>
        <tbody>
			<% stt = 1 %>
           	<% @users.each do |user| %>
				<% if user.quyen == 1 %>
					<% role = "Người quản trị"%>
					<% check = "checked" %>
				
				<% elsif user.quyen == 0%>
					<% role = "Người dùng"%>
					<% check = "" %>

				<%end%>
				<% if user.id == session[:current_user_id] %>
					<% visbily = "hidden"%>
				<% else %>
					<% visbily = ""%>
				<%end %>
				<%  count_blog = Blog.where("idUser = "+ user.id.to_s).distinct.count(:id)%>
        <tr>
            <td><%= stt %></td>
            <td><%=user.username  %></td>
            <td><%= user.email %></td>
			<td><%= count_blog %></td>
           <td>
				<label class="rocker rocker-small" <%= visbily %> >
					<input type="checkbox" data-remote="true"   data-url="/update_quyen" data-params="id=<%= user.id %> " data-method="post" <%= check %>    >
					<span class="switch-left">ad</span>
					<span class="switch-right">user</span>
				</label>	
			</td>

			<td><button class="btn btn-outline-primary"><%= link_to 'Chi tiết', user %></button></td>
			
			<td><button class="btn btn-danger"><%= link_to 'Xóa', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
		</tr>
		<% stt = stt+ 1%>
        <% end %>

        <tbody>
    </table>
</div>
