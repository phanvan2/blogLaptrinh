<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Iduser</th>
      <th>Idcategory</th>
      <th>Title</th>
      <th>Abstract</th>
      <th>Content</th>
      <th>Img</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.idUser %></td>
        <td><%= blog.idCategory %></td>
        <td><%= blog.title %></td>
        <td><%= blog.abstract %></td>
        <td><%= blog.content %></td>
        <td><%= blog.img %></td>
        <td><%= blog.status %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
