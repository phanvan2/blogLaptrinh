<div class="row">
  <div class="col-lg-offset-2">
    <%= form_with url:'/session', method: :post, html: {class: "form-horizontal"} do |f| %> <%= token_tag%>
      <div class="form-group">
        <%= f.label :email, "Name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :email, class: "form-control", placeholder: "Enter user email" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-lg-offset-4">
          <%= f.submit "Login", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
    <%= notice%>

   
  </div>
</div>
