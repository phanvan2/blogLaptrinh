<style type="text/css">
  #box {  
    border: 1px solid rgb(200, 200, 200);   
    box-shadow: rgba(0, 0, 0, 0.1) 0px 5px 5px 2px; 
    background: rgba(200, 200, 200, 0.1);   
    border-radius: 4px; top:50px;
  }

  h2 {    
    text-align:center;  
    color:#fff;
  }
</style>
<div class="row">
  <div class="col-md-offset-4 col-md-4" id="box"> 
   <h2>Thành viên</h2> 
   <hr> 
    <%= form_with url:'/session', method: :post, html: {class: "form-horizontal"} do |f| %> <%= token_tag%>
    <fieldset> 
     <div class="form-group"> 
        <div class="col-md-12"> 
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                 <%= f.text_field :email, class: "form-control", placeholder: "Enter user email" %>
                <!-- <input name="first_name" placeholder="Username" class="form-control" type="text">  -->
           </div> 
        </div> 
     </div> 
     <div class="form-group"> 
          <div class="col-md-12"> 
              <div class="input-group"> 
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                <!-- <input name="email" placeholder="Password" class="form-control" type="text">  -->
             </div> 
          </div> 
     </div> 
     <div class="form-group"> 
      <div class="col-md-12">
       <%= f.submit "Đăng nhập", class: "btn btn-md btn-danger pull-right" %> 
<!--        <button type="submit" class="btn btn-md btn-danger pull-right">Đăng nhập </button> 
 -->      </div> 
     </div> 
    </fieldset>
    <% end %>
    <%= notice%> 
  </div> 

</div>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.css" rel="stylesheet"> <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

